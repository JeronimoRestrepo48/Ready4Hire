# ============================================================================
# Ready4Hire Mobile App - Environment Variables
# ============================================================================
# Copy this file to .env and update with your actual values
# Make sure .env is in .gitignore (never commit secrets!)
# ============================================================================

# ----------------------------------------------------------------------------
# Backend FastAPI (Python) - Main API
# ----------------------------------------------------------------------------
API_BASE_URL=http://localhost:8001
API_VERSION=v2

# ----------------------------------------------------------------------------
# WebApp Blazor/.NET - Authentication Endpoint
# ----------------------------------------------------------------------------
WEBAPP_BASE_URL=http://localhost:5214

# ----------------------------------------------------------------------------
# Push Notifications Configuration
# ----------------------------------------------------------------------------
ENABLE_PUSH_NOTIFICATIONS=true

# Firebase Cloud Messaging (Android)
FCM_SERVER_KEY=your_fcm_server_key_here

# Apple Push Notification Service (iOS)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.ready4hire.mobile
APNS_KEY_PATH=./ios/AuthKey_XXXXXXXXXX.p8

# ----------------------------------------------------------------------------
# Cache & Offline Mode
# ----------------------------------------------------------------------------
CACHE_TTL=3600
ENABLE_OFFLINE_MODE=true

# ----------------------------------------------------------------------------
# Debug & Logging
# ----------------------------------------------------------------------------
DEBUG=false
ENABLE_LOGGING=true

# ----------------------------------------------------------------------------
# Optional: External Services
# ----------------------------------------------------------------------------
# OpenAI API (if using OpenAI instead of Ollama)
# OPENAI_API_KEY=sk-...

# Ollama API URL (if using local Ollama)
OLLAMA_API_URL=http://localhost:11434

# ----------------------------------------------------------------------------
# Production URLs (uncomment and update for production)
# ----------------------------------------------------------------------------
# API_BASE_URL=https://api.ready4hire.com
# WEBAPP_BASE_URL=https://ready4hire.com

# ----------------------------------------------------------------------------
# Sentry Error Tracking (optional)
# ----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
