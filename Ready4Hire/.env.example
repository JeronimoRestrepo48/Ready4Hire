# Ready4Hire - Environment Configuration Template
# Copy to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
ENVIRONMENT=development

# CORS Settings (Security Critical!)
CORS_ORIGINS=http://localhost:5214,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Security
JWT_SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30

# Database
DATABASE_TYPE=memory

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ML Features
USE_ML_SELECTOR=false
EMBEDDINGS_CACHE_ENABLED=True

# Frontend
FRONTEND_URL=http://localhost:5214
