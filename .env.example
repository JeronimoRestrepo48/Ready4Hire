# Ready4Hire Environment Configuration
# ====================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2
LLM_BASE_URL=http://ollama:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30

# Fallback LLM Configuration (if primary fails)
FALLBACK_LLM_MODEL=llama3.2
FALLBACK_LLM_BASE_URL=http://localhost:11434

# Alternative LLM Providers (uncomment to use)
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-3.5-turbo
# LLM_API_KEY=your-openai-api-key

# Data Configuration
DATA_REPOSITORY=filesystem
DATA_PATH=./app/datasets

# Database Configuration (for future database support)
# DATA_REPOSITORY=database
# DATABASE_URL=postgresql://user:password@database:5432/ready4hire

# Audio Configuration
AUDIO_LANGUAGE=es
AUDIO_TTS_ENGINE=pyttsx3
AUDIO_STT_MODEL=whisper

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
STATIC_FILES_PATH=./app/static

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
API_KEY_ENABLED=false
API_KEY=your-secret-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/ready4hire.log

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CACHE_TTL=300