<PageTitle>Reporte Detallado - Ready4Hire</PageTitle>

<div class="report-detail-container">
    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Cargando reporte...</p>
        </div>
    }
    else if (reportData == null)
    {
        <div class="error-state">
            <h2>Reporte no encontrado</h2>
            <p>El reporte solicitado no est√° disponible.</p>
            <button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo("/reports"))">
                Volver a Reportes
            </button>
        </div>
    }
    else
    {
        <div class="report-header">
            <button class="btn-back" @onclick="@(() => Nav.NavigateTo("/reports"))">
                ‚Üê Volver
            </button>
            <div class="header-info">
                <h1>üìä Reporte Detallado</h1>
                <p class="subtitle">@reportData.Role - @reportData.Mode</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-secondary" @onclick="ExportReport">
                    üì• Exportar PDF
                </button>
                <button class="btn btn-primary" @onclick="ShareReport">
                    üîó Compartir
                </button>
            </div>
        </div>

        <!-- M√©tricas Principales -->
        <div class="metrics-grid">
            <div class="metric-card">
                <div class="metric-icon">‚≠ê</div>
                <div class="metric-content">
                    <h3>@reportData.Metrics.AverageScore.ToString("F1")</h3>
                    <p>Score Promedio</p>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon">‚úÖ</div>
                <div class="metric-content">
                    <h3>@reportData.Metrics.SuccessRate.ToString("F1")%</h3>
                    <p>Tasa de √âxito</p>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon">üìù</div>
                <div class="metric-content">
                    <h3>@reportData.Metrics.TotalQuestions</h3>
                    <p>Preguntas Totales</p>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon">üéØ</div>
                <div class="metric-content">
                    <h3>Top @reportData.Metrics.Percentile%</h3>
                    <p>Percentil</p>
                </div>
            </div>
        </div>

        <!-- Fortalezas -->
        @if (reportData.Strengths.Any())
        {
            <div class="section-card">
                <h2>üí™ Fortalezas</h2>
                <ul class="strengths-list">
                    @foreach (var strength in reportData.Strengths)
                    {
                        <li>@strength</li>
                    }
                </ul>
            </div>
        }

        <!-- √Åreas de Mejora -->
        @if (reportData.Improvements.Any())
        {
            <div class="section-card">
                <h2>üìà √Åreas de Mejora</h2>
                <ul class="improvements-list">
                    @foreach (var improvement in reportData.Improvements)
                    {
                        <li>@improvement</li>
                    }
                </ul>
            </div>
        }

        <!-- Recursos Recomendados -->
        @if (reportData.RecommendedResources.Any())
        {
            <div class="section-card">
                <h2>üìö Recursos Recomendados</h2>
                <div class="resources-grid">
                    @foreach (var resource in reportData.RecommendedResources)
                    {
                        <div class="resource-card">
                            <div class="resource-icon">@GetResourceIcon(resource.Type)</div>
                            <div class="resource-content">
                                <h4>@resource.Title</h4>
                                <p>@resource.Reason</p>
                                @if (!string.IsNullOrEmpty(resource.Url))
                                {
                                    <a href="@resource.Url" target="_blank" class="resource-link">
                                        Ver recurso ‚Üí
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Certificado -->
        @if (reportData.Certificate != null && reportData.Certificate.Eligible)
        {
            <div class="section-card certificate-section">
                <h2>üèÜ Certificado</h2>
                <div class="certificate-info">
                    <p>¬°Felicidades! Has obtenido un certificado por tu excelente desempe√±o.</p>
                    <p><strong>ID del Certificado:</strong> @reportData.Certificate.Id</p>
                    <button class="btn btn-success" @onclick="DownloadCertificate">
                        üì• Descargar Certificado
                    </button>
                </div>
            </div>
        }
    }
</div>

