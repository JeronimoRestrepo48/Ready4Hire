@code {
    [Parameter] public string InterviewId { get; set; }

    private ReportDetailData reportData;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var response = await InterviewApi.GetInterviewReportAsync(InterviewId);
            
            if (response.TryGetProperty("report", out var reportElement))
            {
                reportData = new ReportDetailData
                {
                    Role = reportElement.TryGetProperty("role", out var role) ? role.GetString() : "",
                    Mode = reportElement.TryGetProperty("mode", out var mode) ? mode.GetString() : "",
                    Metrics = new ReportMetrics
                    {
                        AverageScore = reportElement.TryGetProperty("metrics", out var metrics) && metrics.TryGetProperty("average_score", out var avgScore) ? avgScore.GetDouble() : 0.0,
                        SuccessRate = reportElement.TryGetProperty("metrics", out var m) && m.TryGetProperty("success_rate", out var sr) ? sr.GetDouble() : 0.0,
                        TotalQuestions = reportElement.TryGetProperty("metrics", out var mt) && mt.TryGetProperty("total_questions", out var tq) ? tq.GetInt32() : 0,
                        Percentile = reportElement.TryGetProperty("metrics", out var mp) && mp.TryGetProperty("percentile", out var p) ? p.GetInt32() : 50
                    },
                    Strengths = reportElement.TryGetProperty("strengths", out var strengths) ? strengths.EnumerateArray().Select(s => s.GetString()).ToList() : new List<string>(),
                    Improvements = reportElement.TryGetProperty("improvements", out var improvements) ? improvements.EnumerateArray().Select(i => i.GetString()).ToList() : new List<string>(),
                    RecommendedResources = reportElement.TryGetProperty("recommended_resources", out var resources) ? resources.EnumerateArray().Select(r => new RecommendedResource
                    {
                        Title = r.TryGetProperty("title", out var title) ? title.GetString() : "",
                        Type = r.TryGetProperty("type", out var type) ? type.GetString() : "",
                        Reason = r.TryGetProperty("reason", out var reason) ? reason.GetString() : "",
                        Url = r.TryGetProperty("url", out var url) ? url.GetString() : null
                    }).ToList() : new List<RecommendedResource>(),
                    Certificate = reportElement.TryGetProperty("certificate", out var cert) && cert.ValueKind != JsonValueKind.Null ? new CertificateInfo
                    {
                        Eligible = cert.TryGetProperty("eligible", out var eligible) && eligible.GetBoolean(),
                        Id = cert.TryGetProperty("id", out var id) ? id.GetString() : null
                    } : null
                };
            }

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading report: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetResourceIcon(string type)
    {
        return type?.ToLower() switch
        {
            "book" => "üìö",
            "course" => "üéì",
            "article" => "üìÑ",
            "video" => "üé•",
            _ => "üìñ"
        };
    }

    private async Task ExportReport()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Exportaci√≥n a PDF pr√≥ximamente disponible");
    }

    private async Task ShareReport()
    {
        var shareUrl = $"{Nav.BaseUri}reports/{InterviewId}";
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", shareUrl);
        await JSRuntime.InvokeVoidAsync("alert", "URL copiada al portapapeles");
    }

    private async Task DownloadCertificate()
    {
        try
        {
            var certificateBytes = await InterviewApi.DownloadCertificateAsync(InterviewId, "svg");
            var fileName = $"certificate_{reportData.Certificate.Id}.svg";
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "image/svg+xml", certificateBytes);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error al descargar certificado: {ex.Message}");
        }
    }

    private class ReportDetailData
    {
        public string Role { get; set; }
        public string Mode { get; set; }
        public ReportMetrics Metrics { get; set; }
        public List<string> Strengths { get; set; }
        public List<string> Improvements { get; set; }
        public List<RecommendedResource> RecommendedResources { get; set; }
        public CertificateInfo Certificate { get; set; }
    }

    private class ReportMetrics
    {
        public double AverageScore { get; set; }
        public double SuccessRate { get; set; }
        public int TotalQuestions { get; set; }
        public int Percentile { get; set; }
    }

    private class RecommendedResource
    {
        public string Title { get; set; }
        public string Type { get; set; }
        public string Reason { get; set; }
        public string Url { get; set; }
    }

    private class CertificateInfo
    {
        public bool Eligible { get; set; }
        public string Id { get; set; }
    }
}

