@page "/"
@using Ready4Hire.MVVM.ViewModels
@using Ready4Hire.MVVM.Models
@layout BlankLayout
@rendermode InteractiveServer

<div class="auth-container">
    <div class="auth-content">
        <!-- Logo y Título -->
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 8V4H8" />
                    <rect x="4" y="7" width="16" height="13" rx="1.5" />
                    <path d="M8 12h8" />
                    <path d="M8 16h6" />
                </svg>
        </div>
            <h1 class="auth-title">Ready<strong>4</strong>Hire</h1>
            <p class="auth-subtitle">Sistema Inteligente de Entrevistas con IA</p>
        </div>

        @if (!isRegisterMode)
        {
            <!-- LOGIN FORM -->
            <div class="auth-form">
                <h2 class="form-title">Iniciar Sesión</h2>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <span>@errorMessage</span>
        </div>
                }

                <div class="form-group">
                    <label class="form-label">Correo Electrónico</label>
                    <input type="email" 
                           class="form-input" 
                           @bind-value="email"
                           @bind-value:event="oninput"
                           placeholder="tu@email.com"
                           @onkeydown="@((e) => { if(e.Key == "Enter") HandleLogin(); })"/>
    </div>

                <div class="form-group">
                    <label class="form-label">Contraseña</label>
                    <input type="password" 
                           class="form-input" 
                           @bind-value="password"
                           @bind-value:event="oninput"
                           placeholder="••••••••"
                           @onkeydown="@((e) => { if(e.Key == "Enter") HandleLogin(); })"/>
</div>

                <div style="display: flex; justify-content: center; width: 100%;">
                    <button class="btn-primary-large" @onclick="HandleLogin" disabled="@isLoading" style="min-width: 200px;">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Iniciando sesión...</span>
                        }
                        else
                        {
                            <span>Iniciar Sesión</span>
                        }
                    </button>
                </div>

                <div class="divider">
                    <span>o continuar con</span>
                </div>

                <div class="social-buttons">
                    <button class="btn-social google" disabled style="opacity: 0.5; cursor: not-allowed;" title="Próximamente disponible">
                        <svg width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span>Google</span>
                    </button>

                    <button class="btn-social microsoft" disabled style="opacity: 0.5; cursor: not-allowed;" title="Próximamente disponible">
                        <svg width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#f25022" d="M1 1h10v10H1z"/>
                            <path fill="#00a4ef" d="M13 1h10v10H13z"/>
                            <path fill="#7fba00" d="M1 13h10v10H1z"/>
                            <path fill="#ffb900" d="M13 13h10v10H13z"/>
                        </svg>
                        <span>Microsoft</span>
                    </button>
                </div>

                <div class="auth-footer">
                    <p>¿No tienes una cuenta?</p>
                    <button class="btn-link" @onclick="ShowRegister">Regístrate aquí</button>
                </div>
            </div>
        }
        else
        {
            <!-- REGISTER FORM (REDISEÑADO) -->
            <div class="auth-form">
                <div class="register-progress">
                    <div class="progress-steps">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="progress-item @(i <= Step ? "active" : "") @(i < Step ? "completed" : "")">
                                <div class="step-circle">
                                    @if (i < Step)
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                            <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <span>@i</span>
                                    }
                                </div>
                                @if (i < 5)
                                {
                                    <div class="step-line @(i < Step ? "completed" : "")"></div>
                                }
                            </div>
                        }
                    </div>
                    <p class="progress-text">Paso @Step de 5</p>
                </div>

                <h2 class="form-title">@GetStepTitle()</h2>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <span>@errorMessage</span>
                    </div>
                }

                @if (Step == 1)
                {
                    <div class="form-group">
                        <label class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-input" @bind="registerEmail" placeholder="tu@email.com"/>
                        </div>

                    <div class="form-group">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-input" @bind="registerPassword" placeholder="Mínimo 8 caracteres"/>
                        <span class="form-hint">Debe contener mayúsculas, números y símbolos</span>
                        </div>

                    <div class="button-group">
                        <button class="btn-secondary-large" @onclick="ShowLogin">Cancelar</button>
                        <button class="btn-primary-large" @onclick="NextStep">Continuar →</button>
                    </div>
                }
                else if (Step == 2)
                {
                    <div class="form-group">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-input" @bind="registerName" placeholder="Juan"/>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Apellido</label>
                        <input type="text" class="form-input" @bind="registerLastName" placeholder="Pérez"/>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Puesto de Trabajo</label>
                        <input type="text" class="form-input" @bind="registerJob" placeholder="Desarrollador Full Stack"/>
                    </div>

                    <div class="form-group">
                        <label class="form-label">País</label>
                        <input type="text" class="form-input" @bind="registerCountry" placeholder="Colombia"/>
                    </div>

                    <div class="button-group">
                        <button class="btn-secondary-large" @onclick="PreviousStep">← Atrás</button>
                        <button class="btn-primary-large" @onclick="NextStep">Continuar →</button>
                </div>
                }
                else if (Step == 3)
                {
                    <p class="section-description">Selecciona tus habilidades técnicas principales</p>
                    
                    <!-- Buscador -->
                    <div class="search-box">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                            <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <input type="text" 
                               class="search-input" 
                               value="@hardSkillSearch"
                               @oninput="FilterHardSkills"
                               placeholder="Buscar habilidad técnica..."/>
                        @if (!string.IsNullOrEmpty(hardSkillSearch))
                        {
                            <button class="search-clear" @onclick="() => { hardSkillSearch = string.Empty; FilterHardSkills(); }">×</button>
                        }
                    </div>

                    <!-- Tags seleccionados -->
                    @if (selectedHardSkills.Any())
                    {
                        <div class="selected-skills">
                            <span class="selected-label">Seleccionadas (@selectedHardSkills.Count):</span>
                            @foreach (var skill in selectedHardSkills)
                            {
                                <button class="skill-chip selected" @onclick="() => ToggleHardSkill(skill)">
                                    @skill
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    
                    <!-- Opciones disponibles (autocompletado) -->
                    @if (filteredHardSkills.Any())
                    {
                        <div class="autocomplete-results">
                            <span class="autocomplete-label">Coincidencias:</span>
                            @foreach (var skill in filteredHardSkills)
                            {
                                <button class="skill-chip" @onclick="() => ToggleHardSkill(skill)">
                                    @skill
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(hardSkillSearch))
                    {
                        <div class="no-results">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                                <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            <span>No se encontraron coincidencias</span>
                        </div>
                    }

                    <div class="button-group">
                        <button class="btn-secondary-large" @onclick="PreviousStep">← Atrás</button>
                        <button class="btn-primary-large" @onclick="NextStep">Continuar →</button>
                    </div>
                }
                else if (Step == 4)
                {
                    <p class="section-description">Selecciona tus habilidades blandas</p>
                    
                    <!-- Buscador -->
                    <div class="search-box">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                            <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <input type="text" 
                               class="search-input" 
                               value="@softSkillSearch"
                               @oninput="FilterSoftSkills"
                               placeholder="Buscar soft skill..."/>
                        @if (!string.IsNullOrEmpty(softSkillSearch))
                        {
                            <button class="search-clear" @onclick="() => { softSkillSearch = string.Empty; FilterSoftSkills(); }">×</button>
                        }
                    </div>

                    <!-- Tags seleccionados -->
                    @if (selectedSoftSkills.Any())
                    {
                        <div class="selected-skills">
                            <span class="selected-label">Seleccionadas (@selectedSoftSkills.Count):</span>
                            @foreach (var skill in selectedSoftSkills)
                            {
                                <button class="skill-chip selected" @onclick="() => ToggleSoftSkill(skill)">
                                    @skill
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    
                    <!-- Opciones disponibles (autocompletado) -->
                    @if (filteredSoftSkills.Any())
                    {
                        <div class="autocomplete-results">
                            <span class="autocomplete-label">Coincidencias:</span>
                            @foreach (var skill in filteredSoftSkills)
                            {
                                <button class="skill-chip" @onclick="() => ToggleSoftSkill(skill)">
                                    @skill
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(softSkillSearch))
                    {
                        <div class="no-results">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                                <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            <span>No se encontraron coincidencias</span>
                        </div>
                    }

                    <div class="button-group">
                        <button class="btn-secondary-large" @onclick="PreviousStep">← Atrás</button>
                        <button class="btn-primary-large" @onclick="NextStep">Continuar →</button>
                    </div>
                }
                else if (Step == 5)
                {
                    <p class="section-description">¿Qué te interesa aprender o mejorar?</p>
                    
                    <!-- Buscador -->
                    <div class="search-box">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                            <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <input type="text" 
                               class="search-input" 
                               value="@interestSearch"
                               @oninput="FilterInterests"
                               placeholder="Buscar interés..."/>
                        @if (!string.IsNullOrEmpty(interestSearch))
                        {
                            <button class="search-clear" @onclick="() => { interestSearch = string.Empty; FilterInterests(); }">×</button>
                        }
                    </div>

                    <!-- Tags seleccionados -->
                    @if (selectedInterests.Any())
                    {
                        <div class="selected-skills">
                            <span class="selected-label">Seleccionados (@selectedInterests.Count):</span>
                            @foreach (var interest in selectedInterests)
                            {
                                <button class="skill-chip selected" @onclick="() => ToggleInterest(interest)">
                                    @interest
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    
                    <!-- Opciones disponibles (autocompletado) -->
                    @if (filteredInterests.Any())
                    {
                        <div class="autocomplete-results">
                            <span class="autocomplete-label">Coincidencias:</span>
                            @foreach (var interest in filteredInterests)
                            {
                                <button class="skill-chip" @onclick="() => ToggleInterest(interest)">
                                    @interest
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                        <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(interestSearch))
                    {
                        <div class="no-results">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                                <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            <span>No se encontraron coincidencias</span>
                        </div>
                    }

                    <div class="button-group">
                        <button class="btn-secondary-large" @onclick="PreviousStep">← Atrás</button>
                        <button class="btn-primary-large" @onclick="CompleteRegistration" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner"></span>
                                <span>Creando cuenta...</span>
                            }
                            else
                            {
                                <span>✓ Crear Cuenta</span>
                            }
                        </button>
                </div>
                }

                <div class="auth-footer">
                    <p>¿Ya tienes una cuenta?</p>
                    <button class="btn-link" @onclick="ShowLogin">Inicia sesión aquí</button>
                </div>
            </div>
        }
    </div>

    <!-- Imagen decorativa lateral -->
    <div class="auth-visual">
        <div class="visual-content">
            <div class="visual-icon">
                🎯
            </div>
            <h2>Prepárate para tu próxima entrevista</h2>
            <ul class="visual-features">
                <li>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Entrevistas simuladas con IA</span>
                </li>
                <li>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Feedback en tiempo real</span>
                </li>
                <li>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Múltiples categorías técnicas</span>
                </li>
                <li>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Evaluación y progreso detallado</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .auth-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        min-height: 100vh;
        background: linear-gradient(
            to right,
            #0a0e1a 0%,
            #0f1419 20%,
            #12171f 35%,
            #151b26 50%,
            #171d28 65%,
            #1a2030 80%,
            #1e293b 100%
        );
        position: relative;
    }

    .auth-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 3rem;
        position: relative;
        z-index: 1;
        max-width: 600px;
        margin: 0 auto;
        width: 100%;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .auth-logo {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 64px;
        height: 64px;
        background: rgba(99, 102, 241, 0.15);
        border-radius: 16px;
        margin-bottom: 1.25rem;
        color: #6366f1;
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.2);
    }

    .auth-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .auth-title strong {
        color: #6366f1;
    }

    .auth-subtitle {
        font-size: 0.95rem;
        color: #94a3b8;
    }

    .auth-form {
        width: 100%;
        background: rgba(17, 24, 39, 0.6);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 20px;
        padding: 2.5rem;
        border: 1px solid rgba(100, 116, 139, 0.2);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    /* Progress Bar - Horizontal */
    .register-progress {
        margin-bottom: 2.5rem;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding: 0 1rem;
    }

    .progress-item {
        display: flex;
        align-items: center;
        flex: 1;
    }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(71, 85, 105, 0.3);
        border: 2px solid rgba(100, 116, 139, 0.4);
        color: #64748b;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.4s ease;
        position: relative;
        z-index: 2;
    }

    .progress-item.active .step-circle {
        background: rgba(99, 102, 241, 0.2);
        border-color: #6366f1;
        color: #6366f1;
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
    }

    .progress-item.completed .step-circle {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-color: #6366f1;
        color: white;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

    .step-circle svg {
        width: 18px;
        height: 18px;
    }

    .step-line {
        flex: 1;
        height: 2px;
        background: rgba(100, 116, 139, 0.3);
        margin: 0 0.5rem;
        transition: all 0.4s ease;
        position: relative;
        z-index: 1;
    }

    .step-line.completed {
        background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
        box-shadow: 0 0 10px rgba(99, 102, 241, 0.3);
    }

    .progress-text {
        font-size: 0.875rem;
        color: #94a3b8;
        text-align: center;
        font-weight: 500;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1.75rem;
        text-align: center;
    }

    .section-description {
        font-size: 0.95rem;
        color: #cbd5e1;
        margin-bottom: 1.5rem;
        text-align: center;
        line-height: 1.5;
    }

    /* Form Elements */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-size: 0.9rem;
        font-weight: 500;
        color: #cbd5e1;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(100, 116, 139, 0.3);
        border-radius: 10px;
        color: white;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #6366f1;
        background: rgba(15, 23, 42, 0.8);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }

    .form-input::placeholder {
