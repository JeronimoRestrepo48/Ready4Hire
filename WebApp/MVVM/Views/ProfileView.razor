@page "/profile"
@using Ready4Hire.MVVM.Models
@using Ready4Hire.Services
@using Ready4Hire.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<PageTitle>Mi Perfil - Ready4Hire</PageTitle>

<div class="profile-container-full">
    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Cargando perfil...</p>
        </div>
    }
    else if (user != null)
    {
        <!-- Header del Perfil -->
        <div class="profile-header-modern">
            <div class="avatar-section-modern">
                <div class="avatar-large-modern">
                    @GetUserInitials()
                </div>
                <button class="btn-change-avatar-modern">Cambiar Avatar</button>
            </div>
            
            <div class="user-info-section-modern">
                <h1 class="profile-name-modern">@user.Name @user.LastName</h1>
                <p class="user-email-modern">@user.Email</p>
                <p class="user-profession-modern">@(user.Profession ?? "Sin profesi√≥n asignada") ‚Ä¢ @(user.ExperienceLevel ?? "Principiante")</p>
            </div>

            <div class="profile-stats-quick-modern">
                <div class="quick-stat-modern">
                    <div class="stat-icon-modern">üèÜ</div>
                    <div class="stat-value-modern">@user.TotalPoints</div>
                    <div class="stat-label-modern">Puntos</div>
                </div>
                <div class="quick-stat-modern">
                    <div class="stat-icon-modern">‚≠ê</div>
                    <div class="stat-value-modern">Nivel @user.Level</div>
                    <div class="stat-label-modern">@GetXpProgress()% al siguiente</div>
                </div>
                <div class="quick-stat-modern">
                    <div class="stat-icon-modern">üî•</div>
                    <div class="stat-value-modern">@user.StreakDays</div>
                    <div class="stat-label-modern">D√≠as de racha</div>
                </div>
            </div>
        </div>

        <!-- Sistema de Pesta√±as -->
        <div class="profile-tabs-modern">
            <button class="tab-btn-modern @(activeTab == "info" ? "active" : "")" @onclick='() => SwitchTab("info")'>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Informaci√≥n</span>
            </button>
            <button class="tab-btn-modern @(activeTab == "badges" ? "active" : "")" @onclick='() => SwitchTab("badges")'>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"></path>
                </svg>
                <span>Insignias</span>
                @if (userBadges.Count(b => b.IsUnlocked) > 0)
                {
                    <span class="tab-badge-count">@userBadges.Count(b => b.IsUnlocked)</span>
                }
            </button>
            <button class="tab-btn-modern @(activeTab == "progress" ? "active" : "")" @onclick='() => SwitchTab("progress")'>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
                <span>Progreso</span>
            </button>
        </div>

        <!-- Contenido de Pesta√±as -->
        <div class="profile-content-modern">
            @if (activeTab == "info")
            {
                <!-- Pesta√±a: Informaci√≥n Personal y Habilidades -->
                <div class="tab-content-modern">
                    <div class="info-card-modern">
                        <div class="card-header-modern">
                            <h3>üìã Informaci√≥n Personal</h3>
                            <button class="btn-edit-modern">Editar</button>
                        </div>
                        <div class="info-grid-modern">
                            <div class="info-item-modern">
                                <label>Nombre:</label>
                                <span>@user.Name</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Apellido:</label>
                                <span>@user.LastName</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Email:</label>
                                <span>@user.Email</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Pa√≠s:</label>
                                <span>@(user.Country ?? "No especificado")</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Trabajo:</label>
                                <span>@(user.Job ?? "No especificado")</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Profesi√≥n:</label>
                                <span>@(user.Profession ?? "No especificada")</span>
                            </div>
                            <div class="info-item-modern">
                                <label>Nivel de Experiencia:</label>
                                <span>@(user.ExperienceLevel ?? "Principiante")</span>
                            </div>
                        </div>
                    </div>

                    <div class="skills-card-modern">
                        <div class="card-header-modern">
                            <h3>üíª Habilidades T√©cnicas</h3>
                            <button class="btn-add-skill-modern" @onclick="@(() => ShowAddSkillModal("technical"))">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 5V19M5 12H19"></path>
                                </svg>
                                Agregar
                            </button>
                        </div>
                        <div class="skills-tags-modern">
                            @if (user.Skills.Any())
                            {
                                @foreach (var skill in user.Skills)
                                {
                                    <span class="skill-tag-modern technical-tag">
                                        @skill
                                        <button class="remove-skill-modern" @onclick="@(() => RemoveSkill("technical", skill))" title="Eliminar">√ó</button>
                                    </span>
                                }
                            }
                            else
                            {
                                <p class="empty-state">No hay habilidades t√©cnicas agregadas. ¬°Agrega tu primera habilidad!</p>
                            }
                        </div>
                    </div>

                    <div class="skills-card-modern">
                        <div class="card-header-modern">
                            <h3>ü§ù Habilidades Blandas</h3>
                            <button class="btn-add-skill-modern" @onclick="@(() => ShowAddSkillModal("soft"))">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 5V19M5 12H19"></path>
                                </svg>
                                Agregar
                            </button>
                        </div>
                        <div class="skills-tags-modern">
                            @if (user.Softskills.Any())
                            {
                                @foreach (var skill in user.Softskills)
                                {
                                    <span class="skill-tag-modern soft-tag">
                                        @skill
                                        <button class="remove-skill-modern" @onclick="@(() => RemoveSkill("soft", skill))" title="Eliminar">√ó</button>
                                    </span>
                                }
                            }
                            else
                            {
                                <p class="empty-state">No hay habilidades blandas agregadas. ¬°Agrega tu primera habilidad!</p>
                            }
                        </div>
                    </div>

                    <div class="skills-card-modern">
                        <div class="card-header-modern">
                            <h3>üéØ Intereses</h3>
                            <button class="btn-add-skill-modern" @onclick="@(() => ShowAddSkillModal("interest"))">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 5V19M5 12H19"></path>
                                </svg>
                                Agregar
                            </button>
                        </div>
                        <div class="skills-tags-modern">
                            @if (user.Interests.Any())
                            {
                                @foreach (var interest in user.Interests)
                                {
                                    <span class="skill-tag-modern interest-tag">
                                        @interest
                                        <button class="remove-skill-modern" @onclick="@(() => RemoveSkill("interest", interest))" title="Eliminar">√ó</button>
                                    </span>
                                }
                            }
                            else
                            {
                                <p class="empty-state">No hay intereses agregados. ¬°Agrega tus intereses profesionales!</p>
                            }
                        </div>
                    </div>
                </div>
            }
            else if (activeTab == "badges")
            {
                <!-- Pesta√±a: Insignias -->
                <div class="tab-content-modern">
                    <div class="badges-header-modern">
                        <div>
                            <h2>üèÖ Mis Insignias</h2>
                            <p class="badges-count-text">@userBadges.Count(b => b.IsUnlocked) de @availableBadges.Count desbloqueadas</p>
                        </div>
                        <div class="badge-progress-ring">
                            <svg class="progress-ring" width="80" height="80">
                                <circle class="progress-ring-bg" cx="40" cy="40" r="36" stroke-width="6"></circle>
                                <circle class="progress-ring-fill" cx="40" cy="40" r="36" stroke-width="6" 
                                        style="stroke-dasharray: @(2 * Math.PI * 36 * (userBadges.Count(b => b.IsUnlocked) / (double)Math.Max(availableBadges.Count, 1))) @(2 * Math.PI * 36);"></circle>
                            </svg>
                            <span class="progress-percentage">@((int)((userBadges.Count(b => b.IsUnlocked) / (double)Math.Max(availableBadges.Count, 1)) * 100))%</span>
                        </div>
                    </div>

                    <div class="badges-explanation-modern">
                        <span>üí°</span>
                        <p><strong>Las insignias son logros permanentes</strong> que desbloqueas por completar hitos espec√≠ficos. Son diferentes a los logros temporales de la gamificaci√≥n.</p>
                    </div>

                    <!-- Filtros -->
                    <div class="badge-filters-modern">
                        <select @bind="badgeFilterRarity" class="filter-select-modern">
                            <option value="">Todas las rarezas</option>
                            <option value="common">Com√∫n</option>
                            <option value="rare">Raro</option>
                            <option value="epic">√âpico</option>
                            <option value="legendary">Legendario</option>
                        </select>

                        <select @bind="badgeFilterCategory" class="filter-select-modern">
                            <option value="">Todas las categor√≠as</option>
                            <option value="milestone">Hitos</option>
                            <option value="technical">T√©cnicas</option>
                            <option value="soft_skills">Soft Skills</option>
                            <option value="achievement">Logros</option>
                            <option value="general">General</option>
                        </select>

                        <label class="filter-checkbox-modern">
                            <input type="checkbox" @bind="showOnlyUnlocked" />
                            <span>Solo desbloqueadas</span>
                        </label>
                    </div>

                    <!-- Grid de Badges -->
                    <div class="badges-grid-modern">
                        @foreach (var userBadge in GetFilteredBadges())
                        {
                            var badge = availableBadges.FirstOrDefault(b => b.Id == userBadge.BadgeId);
                            if (badge != null)
                            {
                                <div class="badge-card-modern @(userBadge.IsUnlocked ? "unlocked" : "locked") rarity-@badge.Rarity">
                                    <div class="badge-icon-large-modern">@badge.Icon</div>
                                    <div class="badge-rarity-modern">@GetRarityName(badge.Rarity)</div>
                                    <h4>@badge.Name</h4>
                                    <p>@badge.Description</p>
                                    
                                    @if (userBadge.IsUnlocked)
                                    {
                                        <div class="badge-unlocked-info-modern">
                                            <span class="unlocked-badge-modern">‚úÖ Desbloqueado</span>
                                            <span class="unlock-date-modern">@userBadge.UnlockedAt.ToString("dd MMM yyyy")</span>
                                            <div class="badge-rewards-modern">
                                                <span>+@badge.RewardPoints pts</span>
                                                <span>+@badge.RewardXp XP</span>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="badge-progress-section-modern">
                                            <div class="progress-bar-modern">
                                                <div class="progress-fill-modern" style="width: @(userBadge.Progress * 100)%"></div>
                                            </div>
                                            <span class="progress-text-modern">@((int)(userBadge.Progress * 100))% completo</span>
                                            <div class="badge-requirement-modern">
                                                @GetRequirementText(badge)
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            }
            else if (activeTab == "progress")
            {
                <!-- Pesta√±a: Progreso -->
                <div class="tab-content-modern">
                    <div class="progress-card-modern">
                        <div class="card-header-modern">
                            <h3>üìä Progreso de Nivel</h3>
                        </div>
                        <div class="level-progress-modern">
                            <div class="level-display-modern">
                                <div class="level-badge-large-modern">
                                    <span class="level-number-modern">@user.Level</span>
                                    <span class="level-label-small">NIVEL</span>
                                </div>
                                <div class="level-info-modern">
                                    <p class="level-label-modern">Nivel Actual</p>
                                    <p class="xp-info-modern">@user.Experience / @GetNextLevelXp() XP</p>
                                </div>
                            </div>
                            <div class="xp-bar-large-modern">
                                <div class="xp-fill-modern" style="width: @GetXpProgress()%">
                                    <div class="xp-glow"></div>
                                </div>
                            </div>
                            <p class="xp-remaining-modern">@(GetNextLevelXp() - user.Experience) XP para el siguiente nivel</p>
                        </div>
                    </div>

                    <div class="stats-grid-detailed-modern">
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">üéØ</div>
                            <div class="stat-number-modern">@user.TotalGamesPlayed</div>
                            <div class="stat-label-modern">Juegos Jugados</div>
                        </div>
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">üèÜ</div>
                            <div class="stat-number-modern">@user.TotalGamesWon</div>
                            <div class="stat-label-modern">Juegos Ganados</div>
                        </div>
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">üìà</div>
                            <div class="stat-number-modern">@GetWinRate()%</div>
                            <div class="stat-label-modern">Win Rate</div>
                        </div>
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">üéñÔ∏è</div>
                            <div class="stat-number-modern">@userBadges.Count(b => b.IsUnlocked)</div>
                            <div class="stat-label-modern">Insignias</div>
                        </div>
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">üî•</div>
                            <div class="stat-number-modern">@user.StreakDays</div>
                            <div class="stat-label-modern">D√≠as de Racha</div>
                        </div>
                        <div class="stat-card-detailed-modern">
                            <div class="stat-icon-large-modern">‚≠ê</div>
                            <div class="stat-number-modern">@user.TotalPoints</div>
                            <div class="stat-label-modern">Puntos Totales</div>
                        </div>
                    </div>

                    <div class="activity-card-modern">
                        <div class="card-header-modern">
                            <h3>üìÖ Actividad Reciente</h3>
                        </div>
                        <div class="activity-info-modern">
                            <div class="activity-item-modern">
                                <span class="activity-label">√öltima actividad:</span>
                                <span class="activity-value">@(user.LastActivityDate?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</span>
                            </div>
                            <div class="activity-item-modern">
                                <span class="activity-label">Racha actual:</span>
                                <span class="activity-value">@user.StreakDays d√≠as üî•</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="error-state-modern">
            <p>‚ùå No se pudo cargar el perfil</p>
            <button class="btn-retry-modern" @onclick="LoadUserData">Reintentar</button>
        </div>
    }
</div>

@if (showAddSkillModal)
{
    <div class="modern-modal-overlay" @onclick="HideAddSkillModal">
        <div class="modern-modal" @onclick:stopPropagation style="max-width: 500px;">
            <div class="modal-header">
                <h2>Agregar @GetSkillTypeLabel(currentSkillType)</h2>
                <button class="modal-close" @onclick="HideAddSkillModal">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="form-group-modern">
                    <label class="form-label">Buscar o escribir nueva habilidad:</label>
                    <input type="text" 
                           class="form-input" 
                           @bind="newSkillInput"
                           @oninput="FilterSkillSuggestions"
                           placeholder="Escribe para buscar..."/>
                </div>
                
                @if (filteredSuggestions.Any())
                {
                    <div class="autocomplete-suggestions">
                        <p class="suggestions-label">Sugerencias:</p>
                        @foreach (var suggestion in filteredSuggestions.Take(8))
                        {
                            <button class="suggestion-item" @onclick="() => SelectSuggestion(suggestion)">
                                @suggestion
                            </button>
                        }
                    </div>
                }
            </div>
            
            <div class="modal-footer">
                <button class="btn-secondary-modern" @onclick="HideAddSkillModal">Cancelar</button>
                <button class="btn-primary-modern" @onclick="AddNewSkill" disabled="@string.IsNullOrWhiteSpace(newSkillInput)">
                    Agregar
                </button>
            </div>
        </div>
    </div>
}

<style>
    /* ============================================================================
       PROFILE PAGE - MODERN DESIGN WITH TABS
       ============================================================================ */
    
    .profile-container-full {
        width: 100%;
        min-height: 100vh;
        background: #0a0a0a;
        color: #fff;
        padding-bottom: 2rem;
    }

    /* Loading State */
    .loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        gap: 1rem;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(102, 126, 234, 0.2);
        border-top-color: #667eea;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Header Modern */
    .profile-header-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2.5rem 2rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-wrap: wrap;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }

    .avatar-section-modern {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .avatar-large-modern {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 700;
        color: white;
        border: 4px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-change-avatar-modern {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        padding: 0.5rem 1.25rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.9rem;
    }

    .btn-change-avatar-modern:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    .user-info-section-modern {
        flex: 1;
        min-width: 200px;
    }

    .profile-name-modern {
        color: #ffffff;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .user-email-modern {
        color: #f0f0f0;
        font-size: 1.1rem;
        font-weight: 500;
        background: rgba(255, 255, 255, 0.15);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        display: inline-block;
        margin: 0 0 0.5rem 0;
        backdrop-filter: blur(10px);
    }

    .user-profession-modern {
        color: #e8e8e8;
        font-size: 1rem;
        margin: 0;
    }

    .profile-stats-quick-modern {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .quick-stat-modern {
        text-align: center;
        background: rgba(255, 255, 255, 0.15);
        padding: 1.25rem 1.75rem;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        min-width: 100px;
        transition: transform 0.2s;
    }

    .quick-stat-modern:hover {
        transform: translateY(-4px);
    }

    .stat-icon-modern {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .stat-value-modern {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.25rem;
    }

    .stat-label-modern {
        font-size: 0.85rem;
        color: #e8e8e8;
    }

    /* Tabs System */
    .profile-tabs-modern {
        display: flex;
        gap: 0.5rem;
        max-width: 1400px;
        margin: 0 auto 2rem auto;
        padding: 0 2rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        overflow-x: auto;
    }

    .profile-tabs-modern::-webkit-scrollbar {
        height: 4px;
    }

    .profile-tabs-modern::-webkit-scrollbar-thumb {
        background: #667eea;
        border-radius: 2px;
    }

    .tab-btn-modern {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: transparent;
        border: none;
        color: #94a3b8;
        padding: 1rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        border-bottom: 3px solid transparent;
        margin-bottom: -2px;
        position: relative;
        white-space: nowrap;
    }

    .tab-btn-modern:hover {
        color: #fff;
        background: rgba(102, 126, 234, 0.1);
    }

    .tab-btn-modern.active {
        color: #667eea;
        border-bottom-color: #667eea;
    }

    .tab-btn-modern svg {
        flex-shrink: 0;
    }

    .tab-badge-count {
        background: #667eea;
        color: white;
        padding: 0.15rem 0.5rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 700;
        margin-left: 0.25rem;
    }

    /* Content Area */
    .profile-content-modern {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .tab-content-modern {
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
