                <button class="btn-action" @onclick="HandleConfigureNotifications">
                    <span class="btn-icon">üîî</span>
                    Configurar Notificaciones
                </button>
                <button class="btn-action" @onclick="HandlePrivacyAndSecurity">
                    <span class="btn-icon">üõ°Ô∏è</span>
                    Privacidad y Seguridad
                </button>
                <button class="btn-action" @onclick="HandleLanguageAndRegion">
                    <span class="btn-icon">üåê</span>
                    Idioma y Regi√≥n
                </button>
            </div>
        </div>

        <div class="settings-card">
            <h3>üéÆ Preferencias de Gamificaci√≥n</h3>
            <div class="settings-options">
                <label class="settings-toggle">
                    <input type="checkbox" checked />
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">Mostrar estad√≠sticas detalladas</span>
                </label>
                <label class="settings-toggle">
                    <input type="checkbox" checked />
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">Notificaciones de logros</span>
