</div>

<style>
    .settings-page-content {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        color: #fff;
    }

    .settings-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .settings-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .settings-header p {
        font-size: 1.1rem;
        color: #94a3b8;
        margin: 0;
    }

    .message {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.9rem;
        animation: slideIn 0.3s ease;
    }

    .error-message {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.4);
        color: #fca5a5;
    }

    .success-message {
        background: rgba(34, 197, 94, 0.2);
        border: 1px solid rgba(34, 197, 94, 0.4);
        color: #86efac;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .settings-sections {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .settings-card {
        background: rgba(15, 23, 42, 0.8);
        border: 1px solid rgba(100, 116, 139, 0.3);
        border-radius: 12px;
        padding: 2rem;
        backdrop-filter: blur(10px);
    }

    .settings-card h3 {
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
        color: #f1f5f9;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .settings-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-action {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        background: rgba(51, 65, 85, 0.6);
        border: 1px solid rgba(100, 116, 139, 0.3);
        border-radius: 8px;
        color: #f1f5f9;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
        width: 100%;
    }

    .btn-action:hover {
        background: rgba(71, 85, 105, 0.7);
        border-color: rgba(148, 163, 184, 0.4);
        transform: translateY(-1px);
    }

    .btn-icon {
        font-size: 1.1rem;
        width: 20px;
        text-align: center;
    }

    .settings-toggle {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 0;
        cursor: pointer;
    }

    .toggle-slider {
        position: relative;
        width: 50px;
        height: 24px;
        background: rgba(100, 116, 139, 0.5);
        border-radius: 12px;
        transition: background 0.2s ease;
    }

    .toggle-slider::before {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        transition: transform 0.2s ease;
    }

    .settings-toggle input[type="checkbox"]:checked + .toggle-slider {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
    }

    .settings-toggle input[type="checkbox"]:checked + .toggle-slider::before {
        transform: translateX(26px);
    }

    .settings-toggle input[type="checkbox"] {
        display: none;
    }

    .toggle-label {
        color: #f1f5f9;
        font-size: 0.9rem;
    }

    .setting-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 0.5rem 0;
    }

    .setting-row label {
        color: #f1f5f9;
        font-size: 0.9rem;
        flex: 1;
    }

    .form-select {
        background: rgba(51, 65, 85, 0.6);
        border: 1px solid rgba(100, 116, 139, 0.3);
        border-radius: 6px;
        color: #f1f5f9;
        padding: 0.5rem;
        font-size: 0.9rem;
        min-width: 120px;
    }

    .form-select:focus {
        outline: none;
        border-color: #6366f1;
        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
    }

    .danger-zone {
        border-color: rgba(239, 68, 68, 0.3);
        background: rgba(127, 29, 29, 0.2);
    }

    .danger-zone h3 {
        color: #fca5a5;
    }

    .btn-danger {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        background: rgba(127, 29, 29, 0.4);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 8px;
        color: #fca5a5;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
        width: 100%;
    }

    .btn-danger:hover {
        background: rgba(153, 27, 27, 0.5);
        border-color: rgba(239, 68, 68, 0.5);
        transform: translateY(-1px);
    }

    @@media (max-width: 768px) {
        .settings-page-content {
            padding: 1rem;
        }
        
        .settings-card {
            padding: 1.5rem;
        }
        
        .setting-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .form-select {
            width: 100%;
        }
    }
</style>