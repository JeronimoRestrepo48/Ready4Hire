    private void StartGame()
    {
        gameStarted = true;
        currentScenario = 1;
        currentScore = 0;
        goodDecisions = 0;
        totalDecisionsMade = 0;
        currentScenarioData = scenarios[0];
        StateHasChanged();
    }

    private void SelectOption(int option)
    {
        selectedOption = option;
        StateHasChanged();
    }

    private void ConfirmDecision()
    {
        if (selectedOption < 0) return;

        totalDecisionsMade++;
        isGoodDecision = currentScenarioData.CorrectOptions.Contains(selectedOption);
        
        if (isGoodDecision)
        {
            goodDecisions++;
            lastDecisionPoints = 100;
        }
        else
        {
            lastDecisionPoints = 25; // Puntos de consolaci√≥n
        }
        
        currentScore += lastDecisionPoints;
        showFeedback = true;
        StateHasChanged();
    }

    private void NextScenario()
    {
        currentScenario++;
        currentScenarioData = scenarios[currentScenario - 1];
        selectedOption = -1;
        showFeedback = false;
        StateHasChanged();
    }

    private void FinishGame()
    {
        gameFinished = true;
        StateHasChanged();
    }

    private void RestartGame()
    {
        gameFinished = false;
        gameStarted = false;
        showFeedback = false;
        selectedOption = -1;
        StateHasChanged();
    }

    private void GoBack()
