@code {
    private class CodeChallenge
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Example { get; set; } = "";
        public int Difficulty { get; set; }
        public int HintsUsed { get; set; }
        public int MaxHints { get; set; } = 2;
        public List<string> Hints { get; set; } = new();
    }

    private List<CodeChallenge> challenges = new();
    private bool gameStarted = false;
    private bool gameFinished = false;
    private bool isProcessing = false;
    private bool isCorrect = false;
    private int currentStep = 1;
    private int totalSteps = 5;
    private int currentScore = 0;
    private int problemsSolved = 0;
    private string userCode = "";
    private string feedback = "";
    private string currentHint = "";
    private string timerDisplay = "30:00";
    private int elapsedSeconds = 0;
    private System.Timers.Timer? gameTimer;
    private CodeChallenge currentChallenge = new();

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/", true);
        }
        
        GenerateChallenges();
    }

    private void GenerateChallenges()
    {
        challenges = new List<CodeChallenge>
        {
            new CodeChallenge
            {
                Title = "Suma de n√∫meros pares",
                Description = "Escribe una funci√≥n que reciba una lista de n√∫meros y retorne la suma de todos los n√∫meros pares.",
                Example = "Input: [1, 2, 3, 4, 5, 6]\nOutput: 12 (2 + 4 + 6)",
                Difficulty = 1,
                Hints = new List<string> 
                { 
                    "Usa el operador m√≥dulo (%) para verificar si un n√∫mero es par",
                    "Recorre la lista y suma solo los elementos que cumplan la condici√≥n"
                }
            },
            new CodeChallenge
            {
                Title = "Pal√≠ndromo",
                Description = "Determina si una cadena de texto es un pal√≠ndromo (se lee igual al derecho y al rev√©s).",
                Example = "Input: 'radar'\nOutput: True\n\nInput: 'hello'\nOutput: False",
                Difficulty = 2,
                Hints = new List<string> 
                { 
                    "Convierte la cadena a min√∫sculas y elimina espacios",
                    "Compara la cadena con su reverso usando slicing [::-1]"
                }
            },
            new CodeChallenge
            {
                Title = "Fibonacci recursivo",
                Description = "Implementa la secuencia de Fibonacci usando recursi√≥n. Retorna el n-√©simo n√∫mero.",
                Example = "Input: 6\nOutput: 8 (secuencia: 0,1,1,2,3,5,8...)",
                Difficulty = 3,
                Hints = new List<string> 
                { 
                    "Los casos base son n=0 retorna 0, n=1 retorna 1",
                    "Para otros casos: fibonacci(n) = fibonacci(n-1) + fibonacci(n-2)"
                }
            },
            new CodeChallenge
            {
                Title = "Ordenamiento burbuja",
                Description = "Implementa el algoritmo de ordenamiento burbuja para ordenar una lista de n√∫meros.",
                Example = "Input: [64, 34, 25, 12, 22, 11, 90]\nOutput: [11, 12, 22, 25, 34, 64, 90]",
                Difficulty = 4,
                Hints = new List<string> 
                { 
                    "Compara elementos adyacentes e interc√°mbialos si est√°n desordenados",
                    "Usa bucles anidados para repetir el proceso"
                }
            },
            new CodeChallenge
            {
                Title = "√Årbol binario - altura",
                Description = "Calcula la altura m√°xima de un √°rbol binario. Un nodo tiene altura 1, un √°rbol vac√≠o tiene altura 0.",
                Example = "Para un √°rbol con ra√≠z y dos hojas, la altura es 2.",
                Difficulty = 5,
                Hints = new List<string> 
                { 
                    "Un √°rbol vac√≠o (None) tiene altura 0",
                    "La altura de un nodo es 1 + max(altura_izquierda, altura_derecha)"
                }
            }
        };
    }

    private void StartGame()
    {
        gameStarted = true;
        currentStep = 1;
        currentScore = 0;
        problemsSolved = 0;
        currentChallenge = challenges[0];
        StartTimer();
        StateHasChanged();
    }

    private void StartTimer()
    {
        elapsedSeconds = 0;
        gameTimer = new System.Timers.Timer(1000);
        gameTimer.Elapsed += (sender, e) => 
        {
            elapsedSeconds++;
            var minutes = (30 * 60 - elapsedSeconds) / 60;
            var seconds = (30 * 60 - elapsedSeconds) % 60;
            timerDisplay = $"{minutes:D2}:{seconds:D2}";
            
            if (elapsedSeconds >= 30 * 60)
            {
                InvokeAsync(TimeUp);
            }
            
            InvokeAsync(StateHasChanged);
        };
        gameTimer.Start();
    }

    private void TimeUp()
    {
        gameTimer?.Stop();
        gameFinished = true;
        StateHasChanged();
    }

    private async Task TestSolution()
    {
        if (string.IsNullOrWhiteSpace(userCode))
        {
            feedback = "‚ùå Por favor, escribe alg√∫n c√≥digo antes de probar.";
            isCorrect = false;
            StateHasChanged();
            return;
        }

        isProcessing = true;
        StateHasChanged();

        await Task.Delay(2000); // Simular procesamiento

        // Simulaci√≥n de evaluaci√≥n (en producci√≥n ser√≠a llamada a API)
        var hasFunction = userCode.Contains("def ");
        var hasLogic = userCode.Length > 50;
        
        if (hasFunction && hasLogic)
        {
            isCorrect = true;
            var basePoints = 200 - (currentChallenge.HintsUsed * 10);
            var timeBonus = Math.Max(0, (10 - currentStep) * 10);
            var stepPoints = basePoints + timeBonus;
            
            currentScore += stepPoints;
            problemsSolved++;
            
            feedback = $"‚úÖ ¬°Excelente! Soluci√≥n correcta. +{stepPoints} puntos";
        }
        else
        {
            isCorrect = false;
            feedback = "‚ùå La soluci√≥n no es correcta. Revisa la l√≥gica e int√©ntalo de nuevo.";
        }

        isProcessing = false;
        StateHasChanged();
    }

    private void ShowHint()
    {
        if (currentChallenge.HintsUsed < currentChallenge.MaxHints)
        {
            currentHint = currentChallenge.Hints[currentChallenge.HintsUsed];
            currentChallenge.HintsUsed++;
            StateHasChanged();
        }
    }

    private void NextChallenge()
    {
        if (currentStep >= totalSteps)
        {
            EndGame();
            return;
        }
        
        currentStep++;
        currentChallenge = challenges[currentStep - 1];
        userCode = "";
        feedback = "";
        currentHint = "";
        isCorrect = false;
        StateHasChanged();
    }

    private void EndGame()
    {
        gameTimer?.Stop();
        gameFinished = true;
        StateHasChanged();
    }

    private void RestartGame()
    {
        gameFinished = false;
        gameStarted = false;
        isCorrect = false;
        userCode = "";
        feedback = "";
        currentHint = "";
        
        foreach (var challenge in challenges)
        {
            challenge.HintsUsed = 0;
        }
        
        StateHasChanged();
    }

    private void GoBack()
    {
        gameTimer?.Stop();
        Navigation.NavigateTo("/gamification", false);
    }

    private void GoToGamification()
    {
        Navigation.NavigateTo("/gamification", false);
    }

    public void Dispose()
    {
        gameTimer?.Stop();
        gameTimer?.Dispose();
    }
}

