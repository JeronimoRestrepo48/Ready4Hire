@code {
    private class SpeedQuestion
    {
        public string Question { get; set; } = "";
        public List<string> Options { get; set; } = new();
        public int CorrectAnswer { get; set; }
        public string Explanation { get; set; } = "";
    }

    private List<SpeedQuestion> questions = new();
    private bool gameStarted = false;
    private bool gameFinished = false;
    private bool showFeedback = false;
    private bool isCorrect = false;
    private int currentQuestion = 1;
    private int totalQuestions = 15;
    private int timeRemaining = 10;
    private int questionTime = 10;
    private int currentScore = 0;
    private int correctAnswers = 0;
    private int selectedAnswer = -1;
    private int lastQuestionPoints = 0;
    private int speedBonus = 0;
    private int streakBonus = 0;
    private int currentStreak = 0;
    private int bestStreak = 0;
    private int totalBonusPoints = 0;
    private double averageResponseTime = 0;
    private List<double> responseTimes = new();
    private string? selectedDifficulty = null;
    private DateTime questionStartTime;
    private System.Threading.Timer? gameTimer;
    private SpeedQuestion currentQuestionData = new();

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/", true);
        }
        
        GenerateQuestions();
    }

    private void SelectDifficulty(string difficulty)
    {
        selectedDifficulty = difficulty;
        questionTime = difficulty switch
        {
            "easy" => 15,
            "medium" => 10,
            "hard" => 7,
            _ => 10
        };
        StateHasChanged();
    }

    private void GenerateQuestions()
    {
        questions = new List<SpeedQuestion>
        {
            new SpeedQuestion { Question = "¬øQu√© significa HTTP?", Options = new() { "HyperText Transfer Protocol", "High Transfer Text Protocol", "Home Tool Transfer Protocol", "Host Text Transfer Protocol" }, CorrectAnswer = 0 },
            new SpeedQuestion { Question = "¬øCu√°l es la complejidad de b√∫squeda binaria?", Options = new() { "O(n)", "O(log n)", "O(n¬≤)", "O(1)" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øQu√© puerto usa HTTPS por defecto?", Options = new() { "80", "443", "8080", "21" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øQu√© significa CPU?", Options = new() { "Computer Processing Unit", "Central Processing Unit", "Core Processing Unit", "Central Program Unit" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øCu√°l es el protocolo de Git?", Options = new() { "FTP", "HTTP", "SSH", "Todos los anteriores" }, CorrectAnswer = 3 },
            new SpeedQuestion { Question = "¬øQu√© es un array?", Options = new() { "Una funci√≥n", "Una estructura de datos", "Un bucle", "Una variable" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øQu√© significa RAM?", Options = new() { "Random Access Memory", "Read Access Memory", "Rapid Access Memory", "Real Access Memory" }, CorrectAnswer = 0 },
            new SpeedQuestion { Question = "¬øCu√°l es la extensi√≥n de Python?", Options = new() { ".pt", ".py", ".python", ".p" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øQu√© es SQL?", Options = new() { "Un lenguaje de programaci√≥n", "Un lenguaje de consulta", "Una base de datos", "Un servidor" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øCu√°ntos bits tiene un byte?", Options = new() { "4", "6", "8", "16" }, CorrectAnswer = 2 },
            new SpeedQuestion { Question = "¬øQu√© significa API?", Options = new() { "Application Programming Interface", "Advanced Programming Interface", "Automated Program Interface", "Application Process Interface" }, CorrectAnswer = 0 },
            new SpeedQuestion { Question = "¬øCu√°l es el operador l√≥gico AND en Python?", Options = new() { "&&", "&", "and", "AND" }, CorrectAnswer = 2 },
            new SpeedQuestion { Question = "¬øQu√© es un algoritmo?", Options = new() { "Un programa", "Una secuencia de pasos", "Un lenguaje", "Una funci√≥n" }, CorrectAnswer = 1 },
            new SpeedQuestion { Question = "¬øCu√°l es la base del sistema binario?", Options = new() { "8", "10", "2", "16" }, CorrectAnswer = 2 },
            new SpeedQuestion { Question = "¬øQu√© significa IDE?", Options = new() { "Integrated Development Environment", "Internal Development Environment", "Interactive Development Environment", "Independent Development Environment" }, CorrectAnswer = 0 }
        };
        
        // Mezclar preguntas
        var random = new Random();
        questions = questions.OrderBy(x => random.Next()).ToList();
    }

    private void StartGame()
    {
        if (selectedDifficulty == null) return;
        
        gameStarted = true;
        currentQuestion = 1;
        currentScore = 0;
        correctAnswers = 0;
        currentStreak = 0;
        bestStreak = 0;
        totalBonusPoints = 0;
        responseTimes.Clear();
        currentQuestionData = questions[0];
        StartQuestion();
        StateHasChanged();
    }

    private void StartQuestion()
    {
        timeRemaining = questionTime;
        selectedAnswer = -1;
        showFeedback = false;
        lastQuestionPoints = 0;
        speedBonus = 0;
        streakBonus = 0;
        questionStartTime = DateTime.Now;
        
        gameTimer = new System.Threading.Timer(async _ =>
        {
            timeRemaining--;
            if (timeRemaining <= 0)
            {
                await InvokeAsync(() => TimeUp());
            }
            await InvokeAsync(StateHasChanged);
        }, null, 1000, 1000);
    }

    private void TimeUp()
    {
        if (!showFeedback)
        {
            selectedAnswer = -1;
            ShowFeedback();
        }
    }

    private void SelectAnswer(int answerIndex)
    {
        if (showFeedback) return;
        
        selectedAnswer = answerIndex;
        var responseTime = (DateTime.Now - questionStartTime).TotalSeconds;
        responseTimes.Add(responseTime);
        
        ShowFeedback();
    }

    private void ShowFeedback()
    {
        showFeedback = true;
        gameTimer?.Dispose();
        
        var responseTime = responseTimes.LastOrDefault();
        
        if (selectedAnswer == currentQuestionData.CorrectAnswer)
        {
            isCorrect = true;
            correctAnswers++;
            currentStreak++;
            bestStreak = Math.Max(bestStreak, currentStreak);
            
            // Puntos base
            lastQuestionPoints = 50;
            
            // Bonus por velocidad (responder en menos de la mitad del tiempo)
            if (responseTime < questionTime / 2.0)
            {
                speedBonus = 25;
                totalBonusPoints += speedBonus;
            }
            
            // Bonus por streak
            if (currentStreak >= 3)
            {
                streakBonus = currentStreak * 5;
                totalBonusPoints += streakBonus;
            }
            
            currentScore += lastQuestionPoints + speedBonus + streakBonus;
        }
        else
        {
            isCorrect = false;
            currentStreak = 0;
            lastQuestionPoints = 0;
        }
        
        StateHasChanged();
        
        // Auto avanzar despu√©s de 1.5 segundos
        Task.Delay(1500).ContinueWith(_ => InvokeAsync(NextQuestion));
    }

    private void NextQuestion()
    {
        if (currentQuestion >= totalQuestions)
        {
            EndGame();
            return;
        }
        
        currentQuestion++;
        currentQuestionData = questions[currentQuestion - 1];
        StartQuestion();
        StateHasChanged();
    }

    private void EndGame()
    {
        gameTimer?.Dispose();
        gameFinished = true;
        
        if (responseTimes.Any())
        {
            averageResponseTime = responseTimes.Average();
        }
        
        StateHasChanged();
    }

    private void RestartGame()
    {
        gameFinished = false;
        gameStarted = false;
        selectedDifficulty = null;
        StateHasChanged();
    }

    private void GoBack()
    {
        gameTimer?.Dispose();
        Navigation.NavigateTo("/gamification", false);
    }

    private void GoToGamification()
    {
        Navigation.NavigateTo("/gamification", false);
    }

    private string GetCorrectAnswerLetter()
    {
        return ((char)('A' + currentQuestionData.CorrectAnswer)).ToString();
    }

    private string GetResultIcon()
    {
        var accuracy = (double)correctAnswers / totalQuestions;
        return accuracy switch
        {
            >= 0.9 => "üèÜ",
            >= 0.8 => "ü•á",
            >= 0.7 => "ü•à", 
            >= 0.6 => "ü•â",
            _ => "‚ö°"
        };
    }

    private string GetPerformanceGrade()
    {
        var accuracy = (double)correctAnswers / totalQuestions;
        return accuracy switch
        {
            >= 0.95 => "S+",
            >= 0.9 => "S",
            >= 0.85 => "A+",
            >= 0.8 => "A",
            >= 0.75 => "B+",
            >= 0.7 => "B",
            >= 0.65 => "C+",
            >= 0.6 => "C",
            _ => "D"
        };
    }

    private string GetGradeDescription()
    {
        var accuracy = (double)correctAnswers / totalQuestions;
        return accuracy switch
        {
            >= 0.9 => "¬°Velocidad Mental Excepcional!",
            >= 0.8 => "¬°Excelente Rapidez Mental!",
            >= 0.7 => "¬°Buena Velocidad de Procesamiento!",
            >= 0.6 => "Velocidad Promedio",
            _ => "Necesitas Practicar M√°s"
        };
    }

    public void Dispose()
    {
        gameTimer?.Dispose();
    }
}

