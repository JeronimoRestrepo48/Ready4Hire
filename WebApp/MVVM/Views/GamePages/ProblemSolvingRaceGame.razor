@page "/game/problem-solving-race"
@using Microsoft.AspNetCore.Components
@using Ready4Hire.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>üèÉ‚Äç‚ôÇÔ∏è Carrera de Resoluci√≥n - Ready4Hire</PageTitle>

<div class="game-container">
    <div class="game-header">
        <button class="btn-back" @onclick="GoBack">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Volver
        </button>
        <div class="game-stats-bar">
            <span class="stat-item">üèÅ @currentProblem/@totalProblems</span>
            <span class="stat-item">üèÜ @currentScore pts</span>
            <span class="stat-item">‚è∞ @FormatTime(timeElapsed)</span>
        </div>
    </div>

    @if (!gameStarted)
    {
        <div class="game-intro">
            <div class="intro-icon">üèÉ‚Äç‚ôÇÔ∏è</div>
            <h1>Carrera de Resoluci√≥n</h1>
            <p>Resuelve problemas complejos contra el tiempo</p>
            <div class="game-rules">
                <h3>üìã Reglas:</h3>
                <ul>
                    <li>‚è∞ Tiempo limitado por problema</li>
                    <li>üéØ 5 problemas en total</li>
                    <li>‚≠ê +100 pts por respuesta correcta</li>
                    <li>‚ö° Bonus por velocidad</li>
                </ul>
            </div>
            <button class="btn-start-game" @onclick="StartGame">
                Iniciar Carrera
            </button>
        </div>
    }
    else if (gameFinished)
    {
        <div class="game-results">
            <div class="results-icon">@GetResultIcon()</div>
            <h1>@GetResultTitle()</h1>
            <div class="results-stats">
                <div class="result-stat">
                    <div class="stat-value">@currentScore</div>
                    <div class="stat-label">Puntos Totales</div>
                </div>
                <div class="result-stat">
                    <div class="stat-value">@correctAnswers/@totalProblems</div>
                    <div class="stat-label">Correctos</div>
                </div>
                <div class="result-stat">
                    <div class="stat-value">@FormatTime(timeElapsed)</div>
                    <div class="stat-label">Tiempo Total</div>
                </div>
            </div>
            <button class="btn-play-again" @onclick="RestartGame">Correr de Nuevo</button>
            <button class="btn-back-results" @onclick="GoToGamification">Ver Gamificaci√≥n</button>
        </div>
    }
    else
    {
        <div class="game-play">
            <div class="question-container">
                <div class="question-number">Problema @currentProblem de @totalProblems</div>
                <div class="time-remaining">‚è∞ @problemTimeRemaining seg</div>
                <h2 class="question-text">@problems[currentProblem - 1].Question</h2>
                
                <div class="answers-grid">
                    @for (int i = 0; i < problems[currentProblem - 1].Options.Count; i++)
                    {
                        var index = i;
                        var option = problems[currentProblem - 1].Options[index];
                        var cssClass = "answer-option";
                        if (selectedAnswer == index)
                        {
                            cssClass += " selected";
                        }
                        
                        <button class="@cssClass" 
                                @onclick="() => SelectAnswer(index)">
                            <span class="option-letter">@GetOptionLetter(index)</span>
                            <span class="option-text">@option</span>
                        </button>
                    }
                </div>

                <button class="btn-submit" @onclick="SubmitAnswer" disabled="@(selectedAnswer == -1)">
                    Resolver Problema
                </button>
            </div>
        </div>
    }
</div>

@code {
    private bool gameStarted = false;
    private bool gameFinished = false;
    private int currentProblem = 1;
    private int totalProblems = 5;
    private int currentScore = 0;
    private int correctAnswers = 0;
    private int timeElapsed = 0;
    private int problemTimeRemaining = 45;
    private int selectedAnswer = -1;

    private List<ProblemQuestion> problems = new();
    private System.Threading.Timer? gameTimer;
    private System.Threading.Timer? problemTimer;

    public class ProblemQuestion
    {
        public string Question { get; set; } = "";
        public List<string> Options { get; set; } = new();
        public int CorrectAnswer { get; set; }
    }

    protected override void OnInitialized()
    {
        InitializeProblems();
    }

    private void InitializeProblems()
    {
        problems = new List<ProblemQuestion>
        {
            new() {
                Question = "Si un tren viaja a 80 km/h y necesita llegar en 2 horas, ¬øqu√© distancia recorrer√°?",
                Options = new() {"120 km", "160 km", "180 km", "200 km"},
                CorrectAnswer = 1
            },
            new() {
                Question = "En una oficina hay 12 empleados. Si 3/4 trabajan desde casa, ¬øcu√°ntos est√°n en la oficina?",
                Options = new() {"2", "3", "4", "6"},
                CorrectAnswer = 1
            },
            new() {
                Question = "¬øCu√°l es la mejor estrategia para resolver un conflicto entre equipos?",
                Options = new() {"Ignorar el problema", "Mediar y encontrar puntos en com√∫n", "Favorecer al equipo m√°s fuerte", "Reorganizar los equipos"},
                CorrectAnswer = 1
            },
            new() {
                Question = "Si A > B, B > C, y C > D, ¬øcu√°l es el orden correcto?",
                Options = new() {"D > C > B > A", "A > B > C > D", "B > A > C > D", "C > D > A > B"},
                CorrectAnswer = 1
            },
            new() {
                Question = "¬øCu√°ntos tri√°ngulos hay en una figura con 4 tri√°ngulos peque√±os formando uno grande?",
                Options = new() {"4", "5", "8", "10"},
                CorrectAnswer = 2
            }
        };
    }

    private void StartGame()
    {
        gameStarted = true;
        gameFinished = false;
        currentProblem = 1;
        currentScore = 0;
        correctAnswers = 0;
        timeElapsed = 0;
        problemTimeRemaining = 45;
        selectedAnswer = -1;
        
        StartTimers();
    }

    private void StartTimers()
    {
        // Timer principal del juego
        gameTimer?.Dispose();
        gameTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(() =>
            {
                timeElapsed++;
                StateHasChanged();
            });
        }, null, TimeSpan.Zero, TimeSpan.FromSeconds(1));

        // Timer del problema actual
        StartProblemTimer();
    }

    private void StartProblemTimer()
    {
        problemTimeRemaining = 45;
        problemTimer?.Dispose();
        problemTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(() =>
            {
                if (problemTimeRemaining > 0)
                {
                    problemTimeRemaining--;
                    StateHasChanged();
                }
                else
                {
                    problemTimer?.Dispose();
                    NextProblem();
                }
            });
        }, null, TimeSpan.Zero, TimeSpan.FromSeconds(1));
    }

    private void SelectAnswer(int index)
    {
        selectedAnswer = index;
    }

    private void SubmitAnswer()
    {
        if (selectedAnswer == -1) return;

        problemTimer?.Dispose();

        if (selectedAnswer == problems[currentProblem - 1].CorrectAnswer)
        {
            correctAnswers++;
            var timeBonus = problemTimeRemaining * 2;
            currentScore += 100 + timeBonus;
        }

        NextProblem();
    }

    private void NextProblem()
    {
        currentProblem++;
        selectedAnswer = -1;
        
        if (currentProblem > totalProblems)
        {
            EndGame();
        }
        else
        {
            StartProblemTimer();
        }
    }

    private void EndGame()
    {
        gameFinished = true;
        gameTimer?.Dispose();
        problemTimer?.Dispose();
    }

    private void RestartGame()
    {
        StartGame();
    }

    private async Task GoBack()
    {
        if (await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/gamification");
        }
        else
        {
            Navigation.NavigateTo("/login");
        }
    }

    private void GoToGamification()
    {
        Navigation.NavigateTo("/gamification");
    }

    private string GetResultIcon()
    {
        var accuracy = (float)correctAnswers / totalProblems;
        return accuracy switch
        {
            >= 0.8f => "üèÜ",
            >= 0.6f => "ü•à",
            >= 0.4f => "ü•â",
            _ => "üìà"
        };
    }

    private string GetResultTitle()
    {
        var accuracy = (float)correctAnswers / totalProblems;
        return accuracy switch
        {
            >= 0.8f => "¬°Velocista Excepcional!",
            >= 0.6f => "¬°Gran Corredor!",
            >= 0.4f => "¬°Buen Ritmo!",
            _ => "Sigue Entrenando"
        };
    }

    private string GetOptionLetter(int index)
    {
        return ((char)('A' + index)).ToString();
    }

    private string FormatTime(int seconds)
    {
        var minutes = seconds / 60;
        var remainingSeconds = seconds % 60;
        return $"{minutes:D2}:{remainingSeconds:D2}";
    }

    public void Dispose()
    {
        gameTimer?.Dispose();
        problemTimer?.Dispose();
    }
}

